<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_specific_form">
        <field name="name">account.account.form.inherit</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="model">account.account</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="deprecated" position="after">
                <field name="centralized"/>
            </field>
        </field>
    </record>
     <record id="show_counteraccount_form" model="ir.ui.view">
            <field name="name">Show Counteraccount Form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="counterpart_account_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="show_counteraccount_tree" model="ir.ui.view">
            <field name="name">Show Counteraccount Tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="counterpart_account_id" readonly="1"/>
                </xpath>
            </field>
        </record>
</odoo>
